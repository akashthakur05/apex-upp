# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Authentication Methods Configuration
# Set to 'false' to disable email/password authentication (defaults to true)
NEXT_PUBLIC_AUTH_EMAIL_ENABLED=true

# Set to 'true' to enable anonymous authentication (defaults to false)
NEXT_PUBLIC_AUTH_ANONYMOUS_ENABLED=true

# Set to 'false' to disable Google authentication (defaults to true)
NEXT_PUBLIC_AUTH_GOOGLE_ENABLED=true

# Set to 'true' to enable GitHub authentication (defaults to false)
NEXT_PUBLIC_AUTH_GITHUB_ENABLED=true

# Set to 'true' to enable Apple authentication (defaults to false)
NEXT_PUBLIC_AUTH_APPLE_ENABLED=false

# Note: These environment variables control which authentication methods are available in your app.
# Changing these will automatically update the login form UI to show/hide corresponding auth options.
#
# Example configurations:
# - Email/Password only:       EMAIL_ENABLED=true, ANONYMOUS_ENABLED=false, GITHUB_ENABLED=false, APPLE_ENABLED=false
# - Email + Anonymous:         EMAIL_ENABLED=true, ANONYMOUS_ENABLED=true, rest disabled
# - Social + Anonymous:        EMAIL_ENABLED=false, ANONYMOUS_ENABLED=true, GOOGLE_ENABLED=true, GITHUB_ENABLED=true
# - All methods enabled:        All set to true/enabled
